[user]
	name = Your Name
	email = your.email@example.com

[core]
	editor = nvim
	excludesfile = ~/.gitignore_global
	autocrlf = input
	ignorecase = false
	filemode = true
	pager = delta

[init]
	defaultBranch = main

[color]
	ui = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red
	new = green

[color "status"]
	added = green
	changed = yellow
	untracked = red

[pull]
	rebase = false

[push]
	default = current
	autoSetupRemote = true

[merge]
	conflictstyle = diff3

[diff]
	colorMoved = default

[interactive]
	diffFilter = delta --color-only

[delta]
	navigate = true
	light = false
	line-numbers = true
	side-by-side = false

[alias]
	# Basic shortcuts
	st = status -sb
	co = checkout
	ci = commit
	br = branch
	df = diff
	lg = log --oneline --graph --decorate

	# Detailed log
	ll = log --pretty=format:'%C(yellow)%h%Creset %ad %C(blue)%an%Creset %C(green)%s%Creset' --date=short

	# Show all branches
	la = log --graph --pretty=format:'%C(yellow)%h%Creset %ad %C(blue)%an%Creset %C(green)%s%Creset %C(red)%d%Creset' --date=short --all

	# Undo last commit
	undo = reset --soft HEAD~1

	# Amend without editing message
	amend = commit --amend --no-edit

	# Show files in last commit
	last = log -1 HEAD --stat

	# List aliases
	aliases = config --get-regexp alias

	# Show current branch name
	current = rev-parse --abbrev-ref HEAD

	# Unstage files
	unstage = reset HEAD --

	# Discard changes
	discard = checkout --

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
